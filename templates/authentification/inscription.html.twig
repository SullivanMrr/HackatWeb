{% include 'base.html.twig' %}
<style>
	.card {
		margin: 0 auto;
	}
</style>

{% block body %}
	<div class="card" style="width: 18rem;text-align:center;">
		<h1 style="text-align:center;">Inscription</h1>
</br>
		{{ form_start(InscriptionForm) }}
		<div class="form-group">
			<label for="exampleFormControlInput1">Prénom:
			</label>
			{{ form_widget(InscriptionForm.Prenom, {'attr': {'placeholder': 'Entrez votre prénom'}}) }}
		</div>
		<div class="form-group">
			<label for="exampleFormControlInput1">Nom:
			</label>
			{{ form_widget(InscriptionForm.Nom, {'attr': {'placeholder': 'Entrez votre nom'}}) }}
		</div>
		<div class="form-group">
			<label for="exampleFormControlInput1">Email:
			</label>
			{{ form_widget(InscriptionForm.mail, {'attr': {'placeholder': 'Entrez votre mail'}}) }}
		</div>
		<div class="form-group">
			{{ form_widget(InscriptionForm.Password, {'attr': {'placeholder': 'Entrez votre mot de passe'}}) }}
		</div>
		<button type="submit" class="btn btn-primary">S'inscrire</button>
		{{ form_end(InscriptionForm) }}
	</div>
	{% include 'footer.html.twig' %}
{% endblock %}
