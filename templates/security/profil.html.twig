{% include 'base.html.twig' %}

{% block body %}


	<!DOCTYPE html>
	<html lang="en">
		<head>
			<title>Bootstrap Example</title>
			<meta charset="utf-8">
			<meta name="viewport" content="width=device-width, initial-scale=1">
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet">
			<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js" integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT" crossorigin="anonymous"></script>

		</head>
		<style>

			.card {
				border: 1px solid #dadada;
				width: 100%;
				height: auto;
				margin-top: 25px;
			}

			.card-title {
				padding: 0;
			}
		</style>
		<div class="container">
			<div class="row">
				<div class="col-4" style="text-align:center;margin-left: 32%;margin-bottom:5%;">
					<div class="card">
						<div class="card-body">
							Nom :
							<h5 class="card-title">{{ app.user.nom }}</h5>
							Prénom :<h5 class="card-title">{{ app.user.prenom }}</h5>
							Mail :<h5 class="card-title">{{ app.user.mail }}</h5>
						</br>
						{% for message in app.flashes('error') %}
							<div class="alert alert-danger" style="text-align:center;">
								{{ message }}
							</div>
						{% endfor %}
						{% for message in app.flashes('success') %}
							<div class="alert alert-success" style="text-align:center;">
								{{ message }}
								{% for Hackathon in lesHackathons %}
									<h5 class="card-title">- {{ Hackathon.theme }}</h5>
								{% endfor %}
							</div>
						{% endfor %}
					</br>
					<a href="{{path('security_logout')}}" class="btn btn-primary">Déconnexion</a>
				</div>
			</div>
		</div>
	</html>
</div></div></html>{% include 'footer.html.twig' %}{% endblock %}
